{
  "name": "@elephant-xyz/mcp",
  "version": "1.1.0",
  "description": "Model Context Protocol server that exposes Elephant data graph tooling",
  "type": "module",
  "main": "dist/index.js",
  "bin": "./dist/index.js",
  "repository": {
    "url": "https://github.com/elephant-xyz/elephant-mcp"
  },
  "scripts": {
    "build": "vite build",
    "dev": "node --watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ci": "vitest run --reporter=json --outputFile=test-results.json",
    "db:init": "rm -rf drizzle && drizzle-kit generate && drizzle-kit migrate",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "release": "semantic-release",
    "prepublishOnly": "npm run build",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "mcp",
    "elephant",
    "data-graph",
    "typescript",
    "server"
  ],
  "author": "Elephant",
  "license": "MIT",
  "engines": {
    "node": ">=22.18.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "prettier": "^3.0.0",
    "semantic-release": "^24.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.53",
    "@helia/json": "^4.0.0",
    "@libsql/client": "^0.15.15",
    "@modelcontextprotocol/sdk": "^1.20.0",
    "ai": "^5.0.76",
    "drizzle-orm": "^0.44.6",
    "helia": "^5.0.0",
    "multiformats": "^13.0.0",
    "pino": "^9.0.0",
    "pino-pretty": "^13.1.1",
    "simple-git": "^3.28.0",
    "terser": "^5.44.0",
    "tree-sitter": "^0.25.0",
    "tree-sitter-javascript": "^0.25.0"
  }
}